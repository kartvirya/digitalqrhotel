# Django Settings
# ==============

# Django Secret Key (REQUIRED for production)
# Generate a new one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-^#ku(-=1nwd8wnfe&1eri+k)_(8g@!n*#p3&!i4=!!c)&rhl3v

# Debug Mode (Set to False in production)
DEBUG=True

# Django Settings Module
DJANGO_SETTINGS_MODULE=pr1.settings

# Network Configuration
# ====================

# Local IP Address (auto-detected, but can be overridden)
LOCAL_IP=127.0.0.1

# Frontend Port (React app)
FRONTEND_PORT=3000

# Backend Port (Django server)
BACKEND_PORT=8000

# Database Configuration
# =====================

# Database Engine (sqlite3, postgresql, mysql)
DB_ENGINE=django.db.backends.sqlite3

# Database Name (for SQLite, this is the file path)
DB_NAME=db.sqlite3

# Database Host (for PostgreSQL/MySQL)
DB_HOST=localhost

# Database Port (for PostgreSQL/MySQL)
DB_PORT=5432

# Database User (for PostgreSQL/MySQL)
DB_USER=

# Database Password (for PostgreSQL/MySQL)
DB_PASSWORD=

# Production Settings
# ==================

# Allowed Hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1,*

# CORS Allowed Origins (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF Trusted Origins (comma-separated list)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Static Files Configuration
# =========================

# Static URL
STATIC_URL=/static/

# Static Root (where collectstatic will put files)
STATIC_ROOT=staticfiles/

# Media Files Configuration
# ========================

# Media URL
MEDIA_URL=/media/

# Media Root
MEDIA_ROOT=media/

# Security Settings
# ================

# Use HTTPS in production
SECURE_SSL_REDIRECT=False

# Secure Cookies
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Session Security
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Email Configuration (for production)
# ===================================

# Email Backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (for production email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging Configuration
# ====================

# Log Level
LOG_LEVEL=INFO

# Log File
LOG_FILE=logs/django.log

# Cache Configuration
# ==================

# Cache Backend (for production)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# Redis Cache (alternative for production)
# CACHE_BACKEND=django_redis.cache.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# Development vs Production
# ========================

# Environment (development, staging, production)
ENVIRONMENT=development

# Time Zone
TIME_ZONE=UTC

# Language Code
LANGUAGE_CODE=en-us

# Use Internationalization
USE_I18N=True

# Use Timezone
USE_TZ=True

# Frontend Configuration
# =====================

# React App Backend URL
REACT_APP_BACKEND_URL=http://localhost:8002

# React App Frontend URL
REACT_APP_FRONTEND_URL=http://localhost:3000

# React App Environment
REACT_APP_ENVIRONMENT=production

# React App API Timeout
REACT_APP_API_TIMEOUT=30000

# React App Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=false

# React App QR Code Settings
REACT_APP_QR_CODE_SIZE=256
REACT_APP_QR_CODE_LEVEL=M

# React App Branding
REACT_APP_APP_NAME=Digital QR Restaurant
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e
