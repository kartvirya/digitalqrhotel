# React App Environment Variables
# =============================

# Backend API URL
REACT_APP_BACKEND_URL=http://localhost:8000

# Frontend URL (for QR codes and redirects)
REACT_APP_FRONTEND_URL=http://localhost:3000

# Environment
REACT_APP_ENVIRONMENT=development

# API Configuration
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true

# QR Code Configuration
REACT_APP_QR_CODE_SIZE=256
REACT_APP_QR_CODE_LEVEL=M

# App Configuration
REACT_APP_APP_NAME=Digital QR Restaurant
REACT_APP_APP_VERSION=1.0.0

# Development Settings
REACT_APP_ENABLE_HOT_RELOAD=true
REACT_APP_ENABLE_SOURCE_MAPS=true

# Production Settings
REACT_APP_ENABLE_COMPRESSION=true
REACT_APP_ENABLE_CACHE=true

# External Services (if needed)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Custom Branding
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e
REACT_APP_LOGO_URL=
